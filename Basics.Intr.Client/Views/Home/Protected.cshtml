@model ProtectedModel
@{
    ViewData["Title"] = "Protected Contents";
}

<h3>Protected Contents</h3>

<div class="mt-2">
    <h4 class="text-primary">Name/UserName: @Model.UserName</h4>
    <table class="table">
        <thead>
            <tr>
                <th>Type</th>
                <th>Value</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var claim in Model.Claims)
            {
                <tr>
                    <td>@claim.Type</td>
                    <td style="word-break: break-all">@claim.Value</td>
                </tr>
            }
        </tbody>
    </table>
</div>
